# =============================================================================
# Dental DICOM Portal â€” Production Environment Template
# Copy this file to .env.production and fill in real values.
# Never commit this file with real secrets.
# =============================================================================

# --- Database -----------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://dental_user:CHANGE_ME@localhost:5432/dental_portal

# --- Keycloak (OIDC) ----------------------------------------------------------
KEYCLOAK_URL=https://auth.example.com
KEYCLOAK_REALM=dental-portal
KEYCLOAK_CLIENT_ID=dental-backend
KEYCLOAK_CLIENT_SECRET=CHANGE_ME
KEYCLOAK_FRONTEND_CLIENT_ID=dental-frontend

# --- Guacamole ----------------------------------------------------------------
GUACAMOLE_URL=http://localhost:8080/guacamole
GUACAMOLE_ADMIN_USER=guacadmin
GUACAMOLE_ADMIN_PASSWORD=CHANGE_ME  # Change from default 'guacadmin'

# --- Windows RDS / DTX Studio -------------------------------------------------
# WinRM for session provisioning
WINRM_HOST=192.168.1.100
WINRM_USER=rds-admin
WINRM_PASSWORD=CHANGE_ME

# Windows RDP for Guacamole connections
WINDOWS_RDP_HOST=192.168.1.100  # Same as WINRM_HOST typically
WINDOWS_RDP_PORT=3389
WINDOWS_RDP_PASSWORD=CHANGE_ME  # Password for dtx_user accounts

# --- DICOM Watcher ------------------------------------------------------------
DICOM_WATCH_DIR=/mnt/dicom/incoming
DICOM_ERROR_DIR=/mnt/dicom/error
DICOM_PROCESSED_DIR=/mnt/dicom/processed

# --- Session Limits -----------------------------------------------------------
SESSION_IDLE_TIMEOUT=900       # seconds  (15 min)
SESSION_HARD_TIMEOUT=3600      # seconds  (60 min)
SESSION_CHECK_INTERVAL=60      # seconds between monitor ticks
MAX_CONCURRENT_SESSIONS=10

# --- CORS ---------------------------------------------------------------------
# Comma-separated list of allowed origins (must match the frontend URL)
CORS_ORIGINS=https://dental-portal.example.com
